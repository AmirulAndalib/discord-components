{
	"$schema": "http://json.schemastore.org/lerna",
	"packages": ["packages/*"],
	"npmClient": "yarn",
	"useWorkspaces": true,
	"version": "4.0.0-alpha.0",
	"command": {
		"publish": {
			"conventionalCommits": true,
			"push": true,
			"removePackageFields": ["devDependencies"]
		},
		"version": {
			"allowBranch": "main",
			"conventionalCommits": true,
			"push": true,
			"createRelease": "github",
			"generateReleaseNotes": true,
			"signGitCommit": true,
			"signGitTag": true
		}
	}
}
